                        label(for="order-email").input-area-el__label *Email address
                    .order-date__box
                      .order-date__title Payment
                      label.radio-el.order-date__payment-method
                        input(type="radio" name="paymentMethod[]" checked value="Visa and Mastercard").radio-el__control
                        span.radio-el__inner
                          span.radio-el__icon
                          span.radio-el__title Visa and Mastercard
                      label.radio-el.order-date__payment-method
                        input(type="radio" name="paymentMethod[]" value="PayPal").radio-el__control
