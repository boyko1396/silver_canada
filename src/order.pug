                        label(for="order-surname").input-area-el__label Last Name
                      .input-area-el.order-date__line
                        select(name="order-delivery").js-select-init.select.select--size-lg
                          option(value="Delivery options") Delivery options
                          option(value="Purolator") Purolator
                          option(value="Fedex") Fedex
                          option(value="Ups") Ups
                      .order-date__line
